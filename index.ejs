<html>
<head>
    
    <title>Pagina de prueba</title>
    
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">

    <!-- Optional theme -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap-theme.min.css">

    <!-- Latest compiled and minified JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
    
    
    
     <script src="http://ajax.googleapis.com/ajax/libs/jquery/2.1.0/jquery.min.js"></script>
         
</head>
<body>
    <h1>Inicio de sesion</h1>
    
       <form class="form-horizontal" role="form" name="form1" action="/log" method="post"  target="_self">
      <div class="form-group">
        <div class="col-md-6">
            <label for="nombre">Email</label>
            <input type="text" class="form-control" id="email" name="email" placeholder="jane.doe@example.com">
          </div>
      </div>
      <div class="form-group">
          <div class="col-md-6">
        <label for="ape">Contrasena</label>
        <input type="password" class="form-control" id="pass" name="pass" placeholder="*********">
          </div>
      </div>
    
      <button name="commandButton" type="submit" class="btn btn-default" value="LogIn">Registrarse</button>
    <label style="color:red"><%= errorMessage %></label>
    </form> 
    
    
    <h1>Formulario de Registro</h1>
    
   <form class="form-horizontal" role="form" name="form1" method="post" action="/registro" target="_self">
      <div class="form-group">
        <div class="col-md-6">
            <label for="nombre">Nombre</label>
            <input type="text" class="form-control" name="nom" placeholder="Jane Doe">
          </div>
      </div>
      <div class="form-group">
          <div class="col-md-6">
        <label for="ape">Apellido</label>
        <input type="text" class="form-control" name="ape" placeholder="Lopez">
          </div>
      </div>
      <div class="form-group">
          <div class="col-md-6">
        <label for="dni">DNI</label>
        <input type="dni" class="form-control" name="dni" placeholder="11111111">
          </div>
      </div>
      <div class="form-group">
          <div class="col-md-6">
        <label for="email">Email</label>
        <input type="email" class="form-control" name="email" placeholder="jane.doe@example.com">
          </div>
      </div>
       <div class="form-group">
           <div class="col-md-6">
            <label for="temp">Temperatura (Â°C)</label>
            <input name ="temp" type="range" min="18" max="30" value="18" step="1" onchange="showValue(this.value)" />
                <span id="range">18</span>
                <script type="text/javascript">
                function showValue(newValue)
                {
                    document.getElementById("range").innerHTML=newValue;
                }
                </script>
        </div>
        </div>
       <div class="form-group">
           <div class="col-md-6">
            <label for="luz">Iluminacion (%)</label>
            <input name ="luz" type="range" min="0" max="100" value="50" step="5" onchange="showValue(this.value)" />
                <span id="range">50</span>
                <script type="text/javascript">
                function showValue(newValue)
                {
                    document.getElementById("range").innerHTML=newValue;
                }
                </script>
        </div>
        </div>
      <button name="commandButton" type="submit" class="btn btn-default" value="Registro">Registrarse</button>
    </form> 
    

</div>
</body>    
</html>
